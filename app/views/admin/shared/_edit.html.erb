<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if !@article.new_record? %>
  <%= form_tag({ :action => "merge", :id => @article.id}, :id => "article_merge_form", :enctype => "multipart/form-data", :class => className) do %>
    <h4><%= _("Merge With") %></h4>
    <div class='class'>
      Article ID  
      <%= text_field_tag 'merge_with' %>
      <%= submit_tag 'Merge' %>
    </div>

  <% end %>
<% end %>